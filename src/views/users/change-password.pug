        span=errorMessage
    form(method="POST")
        input(name="oldPassword", placeholder="Old Password", required, type="password")
        input(name="newPassword", placeholder="New Password", required, type="password")
        input(name="newPasswordConfirmation", placeholder="New Password Confirnmation", required, type="password")
        input(value="Change Password", type="submit")